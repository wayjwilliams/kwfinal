      <%= f.input :description, :input_html => { :value => "Each month I will seek out an opportunity to serve in my community and will journal about it." }, hint: "Describe what your process will be" %>
      <%= f.input :frequency, :input_html => { :value => "monthly" }, label: "How often will you practice this new habit?"%>
      <%= f.input :duration, :input_html => { :value => "6" }, hint: "How many days/weeks/months will it take to become a habit?" %>
      <%= f.button :submit, class: "btn btn-info" %>
      <% end %>
